{
  "name": "walkup_music",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://stags420.github.io/walkup_music",
  "scripts": {
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --report-unused-disable-directives --max-warnings 0 --fix",
    "dev": "vite --host=127.0.0.1",
    "dev:mock": "VITE_MOCK_AUTH=true vite --host=127.0.0.1",
    "fixup": "npm run lint:fix && npm run format",
    "build": "npm run fixup && tsc && vite build",
    "build:mock": "tsc && VITE_MOCK_AUTH=true vite build",
    "test": "npm run build && jest --passWithNoTests --silent",
    "test:all": "npm run test && npm run test:e2e",
    "predeploy": "npm run test:all",
    "precommit": "npm run predeploy",
    "deploy": "gh-pages -d dist",
    "preview": "vite preview",
    "preview:mock": "VITE_MOCK_AUTH=true vite preview",
    "test:watch": "jest --watch",
    "test:e2e": "npm run build:mock && playwright test tests/completeWorkflow.spec.ts --headed",
    "format": "prettier --write \"{src,test}/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"{src,test}/**/*.{ts,tsx,js,jsx,json,css,md}\""
  },
  "dependencies": {
    "@spotify/web-api-ts-sdk": "^1.2.0",
    "bootstrap": "^5.3.7",
    "react": "^19.1.1",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.7.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.8",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.0",
    "typescript": "~5.5.0",
    "vite": "^5.0.8"
  }
}
