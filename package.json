{
  "name": "walkup_music",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://stags420.github.io/walkup_music",
  "scripts": {
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --report-unused-disable-directives --max-warnings 0 --fix",
    "format": "prettier --write \"{src,test}/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"{src,test}/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "fixup": "npm run lint:fix && npm run format",
    "build": "tsc -p tsconfig.build.json && vite build",
    "build:mock": "tsc -p tsconfig.build.json && VITE_MOCK_AUTH=true vite build --outDir dist-mocked",
    "preview": "npm run build && vite preview --port 4173 --host 127.0.0.1",
    "preview:mock": "npm run build:mock && vite preview --port 4173 --host 127.0.0.1 --outDir dist-mocked",
    "dev": "vite --host=127.0.0.1",
    "dev:mock": "VITE_MOCK_AUTH=true vite --host=127.0.0.1",
    "test:unit": "jest --passWithNoTests --silent --runInBand",
    "test:e2e": "VITE_MOCK_AUTH=true playwright test",
    "test:unit:cover": "VITE_ENABLE_COVERAGE=true npm run test:unit",
    "test:e2e:cover": "VITE_ENABLE_COVERAGE=true npm run test:e2e",
    "test:all:cover": "concurrently \"npm run test:unit:cover\" \"npm run test:e2e:cover\" --names \"unit,e2e\" --prefix-colors \"blue,green\" && npm run report:serve",
    "report:serve": "monocart show-report test/reports/index.html",
    "test:all": "concurrently \"npm run test:unit\" \"npm run test:e2e\" --names \"unit,e2e\" --prefix-colors \"blue,green\"",
    "predeploy": "npm run fixup && npm run build && npm run test:all",
    "precommit": "npm run predeploy",
    "deploy": "npm run predeploy && gh-pages -d dist",
    "deploy:raw": "echo 'AGENTS SHOULD NEVER USE THIS' && npm run build && gh-pages -d dist",
    "test:watch": "jest --watch",
    "clean": "./scripts/clean-builds.sh",
    "sync:steering": "node ./scripts/sync-steering.js"
  },
  "dependencies": {
    "@spotify/web-api-ts-sdk": "^1.2.0",
    "bootstrap": "^5.3.7",
    "react": "^19.1.1",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.0",
    "zustand": "^5.0.7",
    "@tanstack/react-query": "^5.59.16"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-destructuring": "^2.2.1",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jest-html-reporter": "^4.3.0",
    "jest-monocart-coverage": "^1.1.1",
    "monocart-coverage-reports": "^2.12.6",
    "monocart-reporter": "^2.9.21",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "~5.9.2",
    "vite": "^7.1.1"
  }
}
